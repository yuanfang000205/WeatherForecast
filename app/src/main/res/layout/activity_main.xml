<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg">
    <RelativeLayout
        android:id="@+id/title_relative"
        android:background="#FF0000	"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/title_city"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/title_city">
        </ImageView>
        <TextView
            android:text="天气预报"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_toRightOf="@id/title_city"
            android:layout_toLeftOf="@id/base"
            android:layout_width="match_parent"
            android:layout_height="50dp" >
        </TextView>
        <ImageView
            android:id="@+id/base"
            android:layout_toLeftOf="@id/title_update"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/base_action_bar_action_city">
        </ImageView>
        <ImageView
            android:id="@+id/title_update"
            android:layout_toLeftOf="@id/title_share"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/title_update">
        </ImageView>
        <ImageView
            android:id="@+id/title_share"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@drawable/title_share">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/today_relative"
        android:layout_below="@id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/cityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="南京"
                    android:textColor="#FFFFFF"
                    android:textSize="47sp"/>
                <TextView
                    android:id="@+id/updateTime"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cityName"
                    android:text="18:12发布"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/humidity"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/updateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湿度：68％"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linear2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
                <ImageView
                android:id="@+id/pm25img"
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:src="@drawable/biz_plugin_weather_0_50">
                </ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@id/linear2"
                android:layout_toRightOf="@id/linear1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/linear2"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM2.5"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/pm25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear3"
                android:layout_toStartOf="@+id/linear2"
                android:text="优"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/rl1">
            <LinearLayout
                android:id="@+id/linear4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/weather"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/biz_plugin_weather_qing"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/linear4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6日星期四"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp">
            </TextView>
                <TextView
                    android:id="@+id/temperature"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="22℃~29℃"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp">
                </TextView>
                <TextView
                    android:id="@+id/weatherState"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="晴"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp">
                </TextView>
                <TextView
                    android:id="@+id/wind"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="风力4级"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp">
                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>